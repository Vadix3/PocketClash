<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:id="@+id/welcome_LAY_mainLayout">
    <ImageView
        android:id="@+id/welcome_IMG_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_info_24" />

    <ImageView
        android:id="@+id/welcome_IMG_title"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/welcome_IMG_title"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/welcome_IMG_startSolo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_IMG_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/welcome_IMG_startAi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_IMG_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>


</RelativeLayout>