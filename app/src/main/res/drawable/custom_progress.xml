<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@android:color/tertiary_text_light"
                android:centerY="1.0"
                android:endColor="@android:color/tertiary_text_light"
                android:startColor="@android:color/tertiary_text_light" />
        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@android:color/tertiary_text_dark"
                    android:centerY="1.0"
                    android:endColor="@android:color/tertiary_text_light"
                    android:startColor="@android:color/tertiary_text_light" />
            </shape>
        </clip>

    </item>


</layer-list>